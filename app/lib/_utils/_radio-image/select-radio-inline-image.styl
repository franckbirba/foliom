@import 'client/stylesheets/*.import'

input[type="radio"]:checked + label
  border-bottom: 4px solid color0;

.radioImage
  &.logo-radio
    opacity: 0;
    position: absolute;

  &.logo-label
    width: 50px;
    height: 55px;
    display: block;
    float: left;
    margin: 5px;
    font-size 40px
    font-family 'foliom-picto'
    cursor pointer
    text-align center

  &.logo-zone
    overflow-x hidden
    overflow-y auto
    max-height 170px
