/**
 * Create a navigation menu with big icons.
 * {String} page The name of the page.
 * {Array}  bigButtons Array of String as the icon's name.
 * {String} extension Extensions of icons.
 */
menuBig(page, bigButtons, extension)
  .{page}
    nav
      display flex
      flex-direction row
      justify-content space-between
      a
        size 293px
        position relative
        z-index 2
        text-decoration none
        display flex
        justify-content center
        align-items center
        text-align center
        span
          opacity 0
          color white
          font-size 2.2em
        &::after
          content ''
          z-index -1
          size inherit
          absolute top left
          background-repeat no-repeat
          background-size contain
          transition all defaultAnimation
          border-radius 2px
        &:hover
          span
            animation mScaleIn .3s ease-out forwards
          &::after
            filter brightness(0.7) contrast(0.7)
      for bigButton in bigButtons
        .{bigButton}
          &::after
            background-image url(/icon/bigButton.extension)
