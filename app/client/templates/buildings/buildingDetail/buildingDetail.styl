@import 'client/stylesheets/*.import'

.buildingDetail
  #leaseSelect
    font-size 1em
    width 180px
  #buildingSummary
    height 244px
    @media (min-width: 1200px)
      height 288px
    overflow-y scroll
    // font-size small
    #lease_name
      font-size 1.2em
      margin-top 10px
    #alerts
      padding-left 0px
      margin 5px 0px 0px 0px
      font-style italic
      color red

  // Certificates
  .certZone
    display flex
    flex-wrap wrap
    justify-content space-around
    align-items center
  // buildingActions
  .buildingActions div
    border-bottom 1px solid color3
    padding 5px 0px 5px 0px
  .buildingActions div:last-child
    border-bottom none

  // DPE and GPE
  .dpe-gpe-legend
    font-size small
    margin 0
    font-weight bold
  .dpe-gpe-chart
    margin .1em 0
  // Water
  .water_block
    height 272px !important
  .water1
    margin 5px 0px 5px 0px
    font-size 35px
  .water2
    font-size 30px
    margin-bottom -25px
    margin-top 3px
  .water2u
    font-size 15px
    margin-bottom 10px
    margin-top 20px
  .waterTable
    width 100%
    text-align center
  #waterTblBig
    border none
    border-bottom 1px solid color3
    margin-bottom 20px
  #waterTblSmall
    border none
    border-spacing 0
  #waterTblSmall tr td
    padding 2px 4px 2px 4px
  #waterTblSmall tr:not(:first-child) td
    border-top 1px solid color3
  #waterTblSmall tr td:not(:first-child)
    border-left 1px solid color3
  .chat-panel
    height 184px

  // Make SVG responsive
  .d3-svg-container
    display inline-block
    position relative
    width 100%
    padding-bottom 100%
    vertical-align middle
    overflow hidden
  .d3-svg-content
    display inline-block
    position absolute
    top 0
    left 0
