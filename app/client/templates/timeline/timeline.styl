@import 'client/stylesheets/colors.import'
@import 'client/templates/timeline/timeline.import'

.timeline
  .timeline-header
    height headingHeight

  .panel.panel-primary.mFadeInRight
    margin-bottom 0

  .panel-body.mFadeInRight
    padding-top 0

  [data-role='energy-type']
    margin-left 15px
    button
      width 100px
      i
        pointer-events: none
      &[data-value='water']
        i
          color brandInfo
      &[data-value='kwh']
        i
          color brandWarning
