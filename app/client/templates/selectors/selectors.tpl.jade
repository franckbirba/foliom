.page.evaluate
  .container
    p {{_ 'selector_page_intro'}}
    .row
      .col-md-6
        h4 {{_ 'fluid_types'}}
        p: i {{_ 'fluid_types_info'}}
        button.btn.btn-success.addFluidTypeBtn(style='border:none !important;background-color:transparent;color:green;', data-toggle='modal', data-target='#selectorFormModal')
          span.glyphicon.glyphicon-plus
        ul.list-group(style='width:400px;position:relative;')
          +each fluidTypesForCurrentEstate
            +each labels
              li.list-group-item
                span.update-fluidTypes(style='width:100%') {{_ this.valueOf}}
                span.glyphicon.glyphicon-trash.remove-fluidTypes(style='position:absolute;right:10px;top:10px;border:none !important;background-color:white;color:red;')
      .col-md-6
        h4 {{_ 'fluid_provider'}}s
        p: i {{_ 'fluid_provider_info'}}
        button.btn.btn-success.addFluidProviderBtn(style='border:none !important;background-color:transparent;color:green;', data-toggle='modal', data-target='#selectorFormModal')
          span.glyphicon.glyphicon-plus
        ul.list-group(style='width:400px;position:relative;')
          each fluidProvidersForCurrentEstate
            each labels
              li.list-group-item
                span.update-fluidProviders(style='width:100%') {{_ this.valueOf}}
                span.glyphicon.glyphicon-trash.remove-fluidProviders(style='position:absolute;right:10px;top:10px;border:none !important;background-color:white;color:red;')
    .row
      .col-md-6
        h4 {{_ 'usage_types'}}
        p: i {{_ 'usage_types_info'}}
        button.btn.btn-success.addUsageTypeBtn(style='border:none !important;background-color:transparent;color:green;', data-toggle='modal', data-target='#selectorFormModal')
          span.glyphicon.glyphicon-plus
        ul.list-group(style='width:400px;position:relative;')
          +each usageTypesForCurrentEstate
            +each labels
              li.list-group-item
                span.update-leaseUsage(style='width:100%') {{_ this.valueOf}}
                //- +quickRemoveButton collection="Selectors" _id=../_id beforeRemove=beforeRemove style="position:absolute;right:10px;top:10px;border:none !important;background-color:white;color:red;" class="btn btn-xs btn-danger"
                //-   span.glyphicon.glyphicon-trash
                span.glyphicon.glyphicon-trash.remove-leaseUsage(style='position:absolute;right:10px;top:10px;border:none !important;background-color:white;color:red;')
  +SelectorForm
