@import 'client/stylesheets/*.import'

.chat
  list-style none
  margin 0
  padding 0

.chat li
  margin-bottom 10px
  padding-bottom 5px
  border-bottom 1px dotted colorC

.chat li.left .chat-body
  margin-left 5px

.chat li.right .chat-body
  margin-right 60px

.chat li .chat-body p
  margin 0
  color colorC

.panel .slidedown .glyphicon, .chat .glyphicon
  margin-right 5px

.chat-panel
  overflow-y scroll

.chat-time
  width: 57px
  font-size: 0.70em
  letter-spacing: -0.2px
