@import 'client/stylesheets/*.import'

.navbar-brand
  padding: 5px 0
  margin-right 25px

#nav-search.input-group
  box-sizing border-box
  border 1px color3 solid
  border-radius 3px
  height 1em
  input, button
    border 1px color3 solid
  input
    padding-left .5em
  button
    background-color color3

.navbar
  .interrogation
    background color0
    border-radius 1.5em
    width 1.5em
    height 1.5em
    color white
    // margin-right 1em
    text-align center
    line-height 1.5em
    font-weight bold
    font-size 1em
  .help-caret
    display inline-block

  .navbar-nav:last-child
    margin-right -30px
    > li:last-child
      a
        margin-right 0
        padding-right 0
