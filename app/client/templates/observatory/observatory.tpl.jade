.page.observe.observatory: .container
  // Page title
  h1.page-title.mFadeInDown {{_ 'manage_portfolios'}}
  // Map
  .mFadeInDown: +map
  // Row of actions
  section.mFadeInUp
    article
      .panel.panel-primary
        .panel-heading
          h3.panel-title
            | {{_ "portfolio"}}
            span.glyphicon.glyphicon-globe.pull-right(aria-hidden='true')
        .panel-body
          // All Portfolios
          #portfolio_list
            .list-group
              each getPortfolioList
                a.list-group-item.select_portfolio(href='#')= name
            button.btn.btn-primary.insert_portfolio(type='button', data-toggle='modal', data-target='#portfolioForm') {{_ 'new_portfolio'}}
    article
      .panel.panel-default
        .panel-heading
          h3.panel-title
            | {{_ 'buildings'}}
            if isBuilding
              span.glyphicon.glyphicon-cog.pull-right(aria-hidden='true')
        #building_panel.panel-body
          // Buildings for current Portfolio
          if isBuilding
            .list-group
              each getBuildingList
                a.list-group-item.select_building(href='#')= building_name
            a.btn.btn-primary(href="{{pathFor 'building-new'}}", role='button') {{_ 'new_building'}}
    article#observatory_barchart_placeholder
      +observatoryBarchart
  +insertPortfolioForm
